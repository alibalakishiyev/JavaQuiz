    </LinearLayout>

    <!-- Æsas MÉ™zmun -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ä°lkin SQL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Ä°lkin SQL SorÄŸusu:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/initialQueryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_light"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <!-- SQL Editor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœï¸ SQL Editor:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/sqlQueryInput"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textCapSentences"
                    android:padding="12dp"
                    android:background="@drawable/edittext_background"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="8dp"/>

                <!-- Quick Query Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnSelectAll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SELECT *"
                        android:textSize="10sp"
                        android:layout_marginEnd="2dp"
                        android:backgroundTint="@color/primary"/>

                    <Button
                        android:id="@+id/btnWhere"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="WHERE"
                        android:textSize="10sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:backgroundTint="@color/orange"/>

                    <Button
                        android:id="@+id/btnJoin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="JOIN"
                        android:textSize="10sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:backgroundTint="@color/accent"/>

                    <Button
                        android:id="@+id/btnGroupBy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GROUP BY"
                        android:textSize="10sp"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="@color/green"/>

                </LinearLayout>

                <!-- Æsas Butonlar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <Button
                        android:id="@+id/executeButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸš€ Ä°cra et"
                        android:textAllCaps="false"
                        android:layout_marginEnd="2dp"
                        android:backgroundTint="@color/primary"/>

                    <Button
                        android:id="@+id/showTablesButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“‹ CÉ™dvÉ™llÉ™r"
                        android:textAllCaps="false"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:backgroundTint="@color/accent"/>

                </LinearLayout>

                <!-- Admin ButonlarÄ± -->
                <LinearLayout
                    android:id="@+id/adminButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginBottom="4dp">

                    <Button
                        android:id="@+id/resetButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”„ SÄ±fÄ±rla"
                        android:textAllCaps="false"
                        android:layout_marginEnd="2dp"
                        android:backgroundTint="@color/red"/>

                    <Button
                        android:id="@+id/newTableButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âž• Yeni CÉ™dvÉ™l"
                        android:textAllCaps="false"
                        android:layout_marginStart="2dp"
                        android:backgroundTint="@color/green"/>

                </LinearLayout>

                <!-- Task ButonlarÄ± -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/checkButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âœ… Taski yoxla"
                        android:textAllCaps="false"
                        android:layout_marginEnd="2dp"
                        android:backgroundTint="@color/green"/>

                    <Button
                        android:id="@+id/showSolutionButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’¡ HÉ™lli gÃ¶stÉ™r"
