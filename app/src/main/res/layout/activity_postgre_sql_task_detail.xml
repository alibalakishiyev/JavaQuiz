                        android:layout_marginStart="2dp"
                        android:backgroundTint="@color/orange"/>

                </LinearLayout>

                <!-- Admin Mode Toggle -->
                <Button
                    android:id="@+id/adminModeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Admin Modu: BAÄžLI"
                    android:textAllCaps="false"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/red"/>

            </LinearLayout>

            <!-- NÉ™ticÉ™ SahÉ™si BaÅŸlÄ±ÄŸÄ± -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š NÉ™ticÉ™:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </ScrollView>

    <!-- NÉ™ticÉ™ Konteyneri - Horizontal vÉ™ Vertical Scroll -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp">

        <!-- Scroll bar gÃ¶stÉ™rici -->
        <TextView
            android:id="@+id/scrollHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â†”ï¸ CÉ™dvÉ™li saÄŸa-sola sÃ¼rÃ¼ÅŸdÃ¼rÉ™ bilÉ™rsiniz"
            android:textSize="10sp"
            android:textColor="@color/gray_dark"
            android:gravity="center"
            android:padding="4dp"
            android:background="@color/gray_very_light"
            android:visibility="gone"/>

        <!-- Horizontal vÉ™ Vertical Scroll -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="horizontal"
            android:fillViewport="true">

            <ScrollView
                android:id="@+id/verticalScrollView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:fillViewport="true">

                <!-- NÉ™ticÉ™ konteyneri -->
                <LinearLayout
                    android:id="@+id/resultContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"/>

            </ScrollView>
        </HorizontalScrollView>

        <!-- AdView aÅŸaÄŸÄ±da -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/gray_very_light">

            <com.google.android.gms.ads.AdView
                android:id="@+id/SqlAdView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-5367924704859976/8399396085"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>